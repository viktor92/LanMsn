<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lanmsn.activities.LoginActivity"
    android:background="@color/activity_login_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAndTextHolder"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/wifi_chat_picture"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/buttonAndTextHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:weightSum="5"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:hint="Pick username"
            android:layout_marginRight="5dp"
            android:imeOptions="actionSend"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:background="@color/login_button_color"
            android:textColor="@android:color/white"
            android:text="LOGIN"
            android:gravity="center"/>



    </LinearLayout>



</RelativeLayout>
